{
  "query": {
    "bool": {
      "must": [
        {
          "match": {
            "title": {
              "query": "рыцОрь",
              "fuzziness": "auto"
            }
          }
        },
        {
          "terms": {
            "category": [
              "Исторический роман"
            ]
          }
        },
        {
          "nested": {
            "path": "stock",
            "query": {
              "bool": {
                "filter": [
                  {
                    "range": {
                      "stock.stock": {
                        "gt": 0
                      }
                    }
                  }
                ]
              }
            }
          }
        }
      ],
      "filter": [
        {
          "range": {
            "price": {
              "gte": 0
            }
          }
        },
        {
          "range": {
            "price": {
              "lte": 2000
            }
          }
        }
      ]
    }
  }
}
