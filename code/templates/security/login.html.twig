{% extends 'layout1.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <div class="col-md-6 col-sm-6 col-xs-12">
    <div class="x_panel">
        <div class="x_title">
            <div class="clearfix"></div>
        </div>

        <div class="x_content">
        <br />
            <form class="form-horizontal form-label-left"  method="post">

                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}


                <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>


                <div class="form-group">
                    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="inputLogin">Login</label>
                    <div class="col-md-9 col-sm-9 col-xs-12">

                        <input type="text" value="{{ last_username }}" name="login" id="inputLogin" class="form-control" autocomplete="username" required autofocus>
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-3 col-sm-3 col-xs-12"  for="inputPassword">Password</label>
                    <div class="col-md-9 col-sm-9 col-xs-12">
                          <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required class="form-control">
                    </div>
                </div>

                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}"
                >

                {#
                    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                    See https://symfony.com/doc/current/security/remember_me.html
                    <div class="checkbox mb-3">
                        <label>
                            <input type="checkbox" name="_remember_me"> Remember me
                        </label>
                    </div>
                #}

                <button class="btn btn-lg btn-primary" type="submit">
                    Sign in
                </button>
            </form>
        </div>
    </div>
    </div>
{% endblock %}